<div class="data-form">
  <form class="form-signin" method="POST" action="<%=`/users/${user._id}/update?_method=PUT`%>">
    <h2>Edit user:</h2>

    <label for="inputFirstName">First Name</label>
    <input class="form-control" type="text" name="first" id="inputFirstName"
    value="<%= user.name.first %>"
    placeholder="First" autofocus>

    <label for="inputLastName">Last Name</label>
    <input class="form-control" type="text" name="last" id="inputLastName"
    value="<%= user.name.last %>"
    placeholder="Last">

    <label for="master">Are you acroyoga instructor?</label><br>
    <input type="radio" name="master" id="master" value=<%= user.master %>>Yes, I am <br>
    <input type="radio" name="master" id="master" value=<%= user.master %>>No, not yet<br>

    <label for="inputEmail">Email address</label>
    <input class="form-control" type="email" name="email" id="inputEmail"
    value="<%= user.email %>"
    placeholder="Email address" required>

    <label for="inputFrom">From</label>
    <input class="form-control" type="text" name="from" id="inputFrom"
    value="<%= user.from %>"
    placeholder="From" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
  </form>

</div>
