<h1 class="center">Welcome to <%= course.title %>!</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <td><%= course.title %></td>
  </tr>
  <tr>
    <th>Organizer</th>
    <td><%= course.organizer %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= course.description %></td>
  </tr>
  <tr>
    <th>Event Type</th>
    <td><strong><%= course.eventType %></strong></td>
  </tr>
  <tr>
    <th>Time</th>
    <td><%= course.time %></td>
  </tr>
  <tr>
    <th>Venue</th>
    <td><%= course.venue %></td>
  </tr>
  <tr>
    <th>Cost</th>
    <td><%= course.cost %></td>
  </tr>
  <tr>
    <th>Number of participants</th>
    <% if(currentUser) { %>
      <td><a href="<%= `/courses/${course._id}/showParticipants` %>">
        <%= course.participants.length %>
      </a></td>
    <% }  else {%>
    <td><%= course.participants.length %></td>
    <% } %>

  </tr>
</table>


  <div>
    <a class="button" href="/courses">View all trainings</a>
  </div>
<% if (currentUser) { %>
  <div>
    <a class="button" href="<%= `/courses/${course._id}/edit`%>">Edit Training Details</a>
  </div>

  <div>
    <a class="button" href="<%= `/courses/${course._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Have you already asked for a permission from organizer to delete this?!')">
      Delete
    </a>
  </div>
<% } %>
